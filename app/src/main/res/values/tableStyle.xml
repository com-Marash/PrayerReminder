<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="leftColumn">
        <item name="android:layout_column">1</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/roundedcorner</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="rightColumn">
        <item name="android:layout_weight">0.4</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/roundedcorner</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
