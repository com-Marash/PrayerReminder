<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marash.prayerreminder.Setting"
    tools:showIn="@layout/activity_setting">

    <Button
        app:layout_widthPercent="75%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="Set an Alert"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_shape"
        android:id="@+id/button_setAlerts"
        android:layout_centerHorizontal="true"/>

    <Button
        app:layout_widthPercent="75%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="Saved alerts"
        android:background="@drawable/button_shape"
        android:id="@+id/button_showSavedAlerts"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_setAlerts" />

    <Button
        app:layout_widthPercent="75%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="Update Location"
        android:background="@drawable/button_shape"
        android:id="@+id/button_selectLocation"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_showSavedAlerts"/>

    <Button
        app:layout_widthPercent="75%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="Alarm Ringtone"
        android:background="@drawable/button_shape"
        android:id="@+id/button_alarmSound"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_selectLocation" />

    <Button
        app:layout_widthPercent="75%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="Calculation Method"
        android:background="@drawable/button_shape"
        android:id="@+id/Button_calculationMethode"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_alarmSound" />

    <Button
        app:layout_widthPercent="75%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="About Us"
        android:background="@drawable/button_shape"
        android:id="@+id/button_aboutUs"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Button_calculationMethode" />

    <Button
        app:layout_widthPercent="75%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="5%"
        android:text="Expected alerts times"
        android:background="@drawable/button_shape"
        android:id="@+id/button_ExpectedAlerts"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_aboutUs"
        android:onClick="ExpectedAlertsFunction"/>


</android.support.percent.PercentRelativeLayout>
