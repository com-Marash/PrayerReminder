<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marash.prayerreminder.Setting"
    tools:showIn="@layout/activity_setting">

    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="Select Location "
        android:background="@drawable/button_shape"
        android:id="@+id/button_selectLocation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         />

    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="Alarm ringtone"
        android:background="@drawable/button_shape"
        android:id="@+id/button_alarmSound"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_selectLocation" />
    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="calculation methode"
        android:background="@drawable/button_shape"
        android:id="@+id/Button_calculationMethode"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_alarmSound" />

</android.support.percent.PercentRelativeLayout>
