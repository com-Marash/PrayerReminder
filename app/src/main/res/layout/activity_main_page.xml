<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.marash.prayerreminder.MainPage"
    android:background="@drawable/background_3">


    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="@string/showPrayerTimes"
        android:background="@drawable/button_shape"
        android:id="@+id/button_showPrayerTimes"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button

        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="@string/setAlerts"
        android:background="@drawable/button_shape"
        android:id="@+id/button_setAlerts"
        android:layout_below="@+id/button_showSavedAlerts"
        android:layout_centerHorizontal="true" />

    <Button

        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="@string/setting"
        android:background="@drawable/button_shape"
        android:id="@+id/button_setting"
        android:layout_below="@+id/button_setAlerts"
        android:layout_alignStart="@+id/button_setAlerts" />

    <Button

        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="@string/aboutUs"
        android:background="@drawable/button_shape"
        android:id="@+id/button_aboutUs"
        android:layout_below="@+id/button_setting"
        android:layout_alignStart="@+id/button_setting" />

    <Button

        app:layout_widthPercent="50%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="5%"
        android:text="@string/showSavedAlerts"
        android:background="@drawable/button_shape"
        android:id="@+id/button_showSavedAlerts"
        android:layout_below="@+id/button_showPrayerTimes"
        android:layout_alignStart="@+id/button_showPrayerTimes" />

</android.support.percent.PercentRelativeLayout>
